<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="395.0" prefWidth="258.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
         <children>
            <HBox>
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="29.0" prefWidth="50.0" text="串口号" />
                  <ComboBox fx:id="serialPortNamePicker" prefHeight="35.0" prefWidth="167.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label prefHeight="29.0" prefWidth="50.0" text="波特率" />
                  <ComboBox fx:id="baudRatePicker" prefHeight="35.0" prefWidth="167.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label prefHeight="29.0" prefWidth="50.0" text="数据位" />
                  <ComboBox fx:id="dataBitsPicker" prefHeight="35.0" prefWidth="167.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label prefHeight="29.0" prefWidth="50.0" text="停止位" />
                  <ComboBox fx:id="stopBitsPicker" prefHeight="35.0" prefWidth="167.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label prefHeight="29.0" prefWidth="50.0" text="校   验" />
                  <ComboBox fx:id="parityPicker" prefHeight="35.0" prefWidth="167.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label prefHeight="29.0" prefWidth="50.0" text="流   控" />
                  <ComboBox fx:id="flowControlPicker" prefHeight="35.0" prefWidth="167.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="serialPortSwitch" layoutX="23.0" layoutY="288.0" mnemonicParsing="false" onAction="#serialPortSwitch" prefHeight="35.0" prefWidth="87.0" text="打开串口" />
      <Button layoutX="135.0" layoutY="288.0" mnemonicParsing="false" onAction="#cleanReceive" prefHeight="35.0" prefWidth="87.0" text="清除接收" />
      <Button layoutX="23.0" layoutY="330.0" mnemonicParsing="false" onAction="#sendData" prefHeight="35.0" prefWidth="87.0" text="发送数据" />
      <Button layoutX="135.0" layoutY="330.0" mnemonicParsing="false" onAction="#cleanSend" prefHeight="35.0" prefWidth="87.0" text="清除发送" />
   </children>
</AnchorPane>
